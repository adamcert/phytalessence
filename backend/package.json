{
  "name": "phytalessence-crm-backend",
  "version": "1.0.0",
  "description": "Backend API for Phytalessence CRM Loyalty System",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "prisma:generate": "prisma generate --schema=../prisma/schema.prisma",
    "prisma:migrate": "prisma migrate dev --schema=../prisma/schema.prisma",
    "prisma:studio": "prisma studio --schema=../prisma/schema.prisma",
    "prisma:seed": "tsx prisma/seed.ts"
  },
  "prisma": {
    "schema": "../prisma/schema.prisma"
  },
  "keywords": [
    "crm",
    "loyalty",
    "phytalessence",
    "snapss"
  ],
  "author": "",
  "license": "UNLICENSED",
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "axios": "^1.7.7",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-rate-limit": "^7.4.1",
    "fastest-levenshtein": "^1.0.16",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "winston": "^3.15.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.9.0",
    "eslint": "^9.14.0",
    "jest": "^29.7.0",
    "jest-mock-extended": "^4.0.0",
    "prisma": "^5.22.0",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  }
}
